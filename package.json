  "devDependencies": {
    "lite-server": "^2.6.1",
    "onchange": "^7.1.0",
    "parallelshell": "^3.0.1",
    "popper.js": "^1.15.0",
    "sass": "^1.51.0"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "bootstrap-social": "^5.1.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.6.0",
    "node-sass": "^7.0.1"
  }
}
